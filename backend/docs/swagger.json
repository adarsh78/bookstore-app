{
    "swagger": "2.0",
    "info": {
      "description": "Bookstore API Documentation",
      "version": "1.0.0",
      "title": "Bookstore API"
    },
    "host": "localhost:3010",
    "basePath": "/api",
    "tags": [
      {
        "name": "Auth",
        "description": "Authentication endpoints"
      },
      {
        "name": "Books",
        "description": "Book management endpoints"
      }
    ],
    "paths": {
      "/auth/register": {
        "post": {
          "tags": ["Auth"],
          "summary": "Register a new user",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "description": "User object",
              "required": true,
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "User created successfully"
            },
            "400": {
              "description": "Bad request"
            }
          }
        }
      },
      "/auth/login": {
        "post": {
          "tags": ["Auth"],
          "summary": "Login user",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "description": "User credentials",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Login"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User logged in successfully"
            },
            "401": {
              "description": "Invalid credentials"
            }
          }
        }
      },
      "/books": {
        "get": {
          "tags": ["Books"],
          "summary": "Get all books",
          "parameters": [
            {
              "name": "page",
              "in": "query",
              "type": "integer",
              "description": "Page number"
            },
            {
              "name": "limit",
              "in": "query",
              "type": "integer",
              "description": "Number of books per page"
            },
            {
              "name": "title",
              "in": "query",
              "type": "string",
              "description": "Search by title"
            },
            {
              "name": "author",
              "in": "query",
              "type": "string",
              "description": "Search by author"
            },
            {
              "name": "genre",
              "in": "query",
              "type": "string",
              "description": "Search by genre"
            }
          ],
          "responses": {
            "200": {
              "description": "A list of books"
            }
          }
        },
        "post": {
          "tags": ["Books"],
          "summary": "Create a new book",
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "description": "Book object",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Book"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Book created successfully"
            },
            "400": {
              "description": "Bad request"
            },
            "401": {
              "description": "Unauthorized"
            }
          }
        }
      },
      "/books/{id}": {
        "get": {
          "tags": ["Books"],
          "summary": "Get a single book",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string",
              "description": "Book ID"
            }
          ],
          "responses": {
            "200": {
              "description": "Book details"
            },
            "404": {
              "description": "Book not found"
            }
          }
        },
        "put": {
          "tags": ["Books"],
          "summary": "Update a book",
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string",
              "description": "Book ID"
            },
            {
              "name": "body",
              "in": "body",
              "description": "Book object",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Book"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Book updated successfully"
            },
            "400": {
              "description": "Bad request"
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Book not found"
            }
          }
        },
        "delete": {
          "tags": ["Books"],
          "summary": "Delete a book",
          "security": [
            {
              "Bearer": []
            }
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string",
              "description": "Book ID"
            }
          ],
          "responses": {
            "200": {
              "description": "Book deleted successfully"
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Book not found"
            }
          }
        }
      }
    },
    "definitions": {
      "User": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Login": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Book": {
        "type": "object",
        "required": ["title", "author", "genre", "description", "price"],
        "properties": {
          "title": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "genre": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          }
        }
      }
    },
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\""
      }
    }
  }
  